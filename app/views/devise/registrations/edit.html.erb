<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
    <div class="container">
      <div class="row" style="margin-top: 50px;">
        <div class="col-md-8">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Edit My Account</h3>
            </div>
            <div class="panel-body">
              <div class="form-inputs">
                
                <%= f.input :first_name, required: true, autofocus: true %>
                <%= f.input :last_name, required: true %>
                <%= f.input :username, required: true %>
                <%= f.input :age, required: true %>
                <%= f.input :gender, required: true %>
                <%= f.input :bio, required: true %>
                <%= f.input :email, required: true %>
            
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
            
                <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
                <%= f.input :password_confirmation, required: false %>
                <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
              </div>
            
              <div class="form-actions">
                <%= f.button :submit, "Update My Account", class: "btn btn-info" %>
              </div>
            <% end %>
            </div>
          </div><!-- end panel panel-info -->
        </div><!-- end col-md-8 -->
        <div class="col-md-4">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title">Cancel my account</h3>
            </div>
            <div class="panel-body">
              <p>Unhappy? We are sorry.... </p>
              <p><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
            </div>
          </div><!-- panel panel-danger -->
          <%= link_to "Cancel", :back, class: "btn btn-link" %>
        </div><!-- end col-md-4-->
      </div><!-- end row -->
    </div>


