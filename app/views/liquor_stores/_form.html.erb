<%= simple_form_for(@liquor_store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.file_field :logo, multiple: true %>
    <%= f.input :facebook %>
    <%= f.input :twitter %>
    <%= f.input :instagram %>
    <%= f.input :phone %>
    <%= f.input :website %>
    <%= f.input :hours_monday %>
    <%= f.input :hours_tuesday %>
    <%= f.input :hours_wednesday %>
    <%= f.input :hours_thursday %>
    <%= f.input :hours_friday %>
    <%= f.input :hours_saturday %>
    <%= f.input :hours_sunday %>
    <%= f.input :delivery %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
