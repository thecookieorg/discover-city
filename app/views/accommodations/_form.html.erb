<%= simple_form_for(@accommodation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :website %>
    <%= f.input :facebook %>
    <%= f.input :twitter %>
    <%= f.input :booking_url %>
    <%= f.file_field :logo, multiple: true %>
    <%= f.input :phone %>
    <%= f.input :price_per_night %>
    <%= f.input :free_wi_fi %>
    <%= f.input :air_conditioned %>
    <%= f.input :breakfast %>
    <%= f.input :child_friendly %>
    <%= f.input :airport_shuttle %>
    <%= f.input :gym %>
    <%= f.input :parking %>
    <%= f.input :laundry_service %>
    <%= f.input :pool %>
    <%= f.input :restaurant %>
    <%= f.input :hot_tub %>
    <%= f.input :smoke_free %>
    <%= f.input :accessible %>
    <%= f.input :pets_allowed %>
    <%= f.input :spa %>
    <%= f.input :bar %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
